<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hr.frenesius.todolist.RewardActivity"
    tools:ignore="MergeRootFrame" >
 <!-- achterground afbeelding -->
<ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:alpha="0.15"
        android:src="@drawable/applogo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableLayout
            android:id="@+id/DashboardMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/borderlayout" >
>
            <!-- Dashbaord Main -->

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dashboard"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/YourName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YourName"
                    android:textStyle="italic" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/YourScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your score is: 0"
                    android:textStyle="italic" />
            </TableRow>
        </TableLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="135dp"
            android:layout_height="108dp"
            android:layout_alignLeft="@+id/DashboardMain"
            android:layout_alignRight="@+id/DashboardMain"
            android:layout_below="@+id/DashboardMain" >
        </RelativeLayout>

        <TableRow
            android:id="@+id/tableReward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/relativeLayout1"
            android:layout_below="@+id/relativeLayout1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/borderlayout"
            android:weightSum="8" >

            <TextView
                android:id="@+id/textView99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:hint="Select the item you wish to buy" />

            <Button
                android:id="@+id/sellButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_click"
                android:text="sell" />

            <Button
                android:id="@+id/buyButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_click"
                android:text="buy" />
        </TableRow>
    </RelativeLayout>

</FrameLayout>
